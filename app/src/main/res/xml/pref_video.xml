<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="bilinear"
        android:key="video_upscale"
        android:summary="@string/pref_video_upscale_summary"
        android:entries="@array/pref_video_scale_list"
        android:entryValues="@array/pref_video_scale_list"
        android:title="@string/pref_video_upscale_title" />

    <ListPreference
        android:defaultValue="bilinear"
        android:key="video_downscale"
        android:summary="@string/pref_video_downscale_summary"
        android:entries="@array/pref_video_scale_list"
        android:entryValues="@array/pref_video_scale_list"
        android:title="@string/pref_video_downscale_title" />

    <CheckBoxPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:defaultValue="false"
        android:key="check_box_preference_1"
        android:summary="@string/pref_video_interpolation_summary"
        android:title="@string/pref_video_interpolation_title" />

    <is.xyz.mpv.SummaryEditTextPreference
        android:inputType="numberDecimal|numberSigned"
        android:defaultValue=""
        android:key="video_scale_param1"
        android:summary="@string/pref_video_scale_param1_summary"
        android:hint="@string/pref_video_scale_param1_hint"
        android:title="@string/pref_video_scale_param1_title" />

    <is.xyz.mpv.SummaryEditTextPreference
        android:inputType="numberDecimal|numberSigned"
        android:defaultValue=""
        android:key="video_scale_param2"
        android:summary="@string/pref_video_scale_param2_summary"
        android:hint="@string/pref_video_scale_param2_hint"
        android:title="@string/pref_video_scale_param2_title" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="video_deband"
        android:summary="@string/pref_video_debanding_summary"
        android:title="@string/pref_video_debanding_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="video_refreshrate"
        android:summary="@string/pref_video_refreshrate_summary"
        android:title="@string/pref_video_refreshrate_title" />

</PreferenceScreen>
